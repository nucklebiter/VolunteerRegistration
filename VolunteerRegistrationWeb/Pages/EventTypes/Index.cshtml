@page
@model VolunteerRegistrationWeb.Pages.EventTypes.IndexModel

@{
    ViewData["Title"] = "Event Types";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Event Type List</h2>
        </div>
        <div class="text-end col-6">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> &nbsp;Create New Event Type
            </a>
        </div>
    </div>

    <br />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Event Type Name
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.EventTypes)
            {
                <tr>
                    <td>
                       @obj.EventTypeName 
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> &nbsp;Edit
                            </a>
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> &nbsp;Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
