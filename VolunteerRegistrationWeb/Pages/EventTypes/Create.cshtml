@page
@model VolunteerRegistrationWeb.Pages.EventTypes.CreateModel

@{
    ViewData["Title"] = "Event Types";
}

<form method="Post"> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Event Type</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="EventType.EventTypeName"></label>
            <input asp-for="EventType.EventTypeName" type="text" class="form-control"/>
            <span asp-validation-for="EventType.EventTypeName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary text-center" style="width:150px;">Create</button>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
